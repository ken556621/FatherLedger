<div class="container col-4 mt-4">
    <form action="/account/new" method="POST">
        <div class="form-group">
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="$" name="price">
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio1" value="food" name="category">
            <label class="form-check-label" for="inlineRadio1">
                <span><i class="fas fa-bread-slice"></i>食物</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio2" value="cloth" name="category">
            <label class="form-check-label" for="inlineRadio2">
                <span><i class="fas fa-tshirt"></i>衣服</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio3" value="drink" name="category">
            <label class="form-check-label" for="inlineRadio3">
                <span><i class="fas fa-cocktail"></i>飲料</span>
            </label>
        </div>
        <div class="form-group mt-2">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="描述" name="description"></textarea>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio1" value="creditcard" name="payment">
            <label class="form-check-label" for="inlineRadio1">
                <span><i class="far fa-credit-card"></i>信用卡</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio2" value="cash" name="payment">
            <label class="form-check-label" for="inlineRadio2">
                <span><i class="fas fa-money-bill"></i>現金</span>
            </label>
        </div>
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" name="monthlyCheck">
            <label class="form-check-label" for="defaultCheck1">
                將其設為每月固定開銷
            </label>
        </div>
        <div class="btn-wrapper d-flex justify-content-between mt-4">
            <div class="btn-home">
                <a href="/"><button class="btn btn-secondary">首頁</button></a>
            </div>
            <div class="btn-save d-flex">
                <div class="btn-reset mr-2">
                    <button class="btn btn-secondary" type="reset">重設</button>
                </div>
                <button class="btn btn-secondary" type="submit">儲存</button>
            </div>
        </div>
    </form>
</div>
