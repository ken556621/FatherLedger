<div class="add-new-list-container pt-4">
    <form action="/account/new" method="POST" class="container col-6">
        <div class="date-input mb-4" id="dateInputField">
            <input class="form-control" type="date" id="dateInput" name="date" {{#if list}}value="{{{date}}}"{{/if}}>
            {{#if errorMessage}}<small class="form-text text-danger">Must be filled in!</small>{{/if}}
        </div>
        <div class="form-group">
            <input type="number" class="form-control" id="formGroupExampleInput" placeholder="$" name="price" {{#if list}}value="{{{list.price}}}"{{/if}}>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio1" value="food" name="category" {{#if category.food}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio1">
                <span><i class="fas fa-bread-slice mr-1"></i>食物</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio2" value="cloth" name="category" {{#if category.cloth}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio2">
                <span><i class="fas fa-tshirt mr-1"></i>衣服</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio3" value="drink" name="category" {{#if category.drink}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio3">
                <span><i class="fas fa-cocktail mr-1"></i>飲料</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio4" value="rent" name="category" {{#if category.rent}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio4">
                <span><i class="fas fa-home mr-1"></i>房租</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio5" value="traffic" name="category" {{#if category.traffic}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio5">
                <span><i class="fas fa-car mr-1"></i>交通</span>
            </label>
        </div>
        <div class="form-group mt-2">
            <input type="text" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="描述" name="description" {{#if list}}value="{{{list.description}}}"{{/if}}></input>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio1" value="creditcard" name="payment" {{#if payment.creditcard}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio1">
                <span><i class="far fa-credit-card mr-1"></i>信用卡</span>
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="inlineRadio2" value="cash" name="payment" {{#if payment.cash}} checked {{/if}}>
            <label class="category-label form-check-label" for="inlineRadio2">
                <span><i class="fas fa-money-bill mr-1"></i>現金</span>
            </label>
        </div>
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" id="defaultCheck1" name="monthlyCheck" {{#if list.monthlyCheck}} checked {{/if}}>
            <label class="category-label form-check-label" for="defaultCheck1">
                將其設為每月固定開銷
            </label>
        </div>
        <div class="btn-wrapper d-flex justify-content-between mt-4">
            <a href="/">
                <button class="btn bg-primary text-white" type="button">
                        <span>
                            首頁
                        </span>
                </button>
            </a>
            <div class="btn-save d-flex">
                <button class="btn mr-2 bg-primary text-white" type="reset">
                    <span>
                        重設
                    </span>
                </button>
                <button class="btn bg-primary text-white" type="submit">
                    <span>
                        儲存
                    </span>
                </button>
            </div> 
        </div>
    </form>
</div>
