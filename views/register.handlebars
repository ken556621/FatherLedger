<div class="container bg-white rounded col-6 mt-4">
    {{> messages}}
    <form action="/users/register" method="POST">
        <fieldset>
        <div class="form-group">
            <fieldset>
                <label class="control-label" for="readOnlyInput">姓名</label>
                <input class="form-control" id="readOnlyInput" type="text" placeholder="Your name here…" name="name" value="{{{name}}}">
            </fieldset>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">信箱</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email" value="{{{email}}}">
            <small id="emailHelp" class="form-text text-muted"></small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">密碼</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" value="{{{password}}}">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">確認密碼</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Ensure Password" name="password2" value="{{{password2}}}">
        </div>
        </fieldset>
        <div class="modal-footer">
        <a href="/">
            <button class="btn m-2 bg-primary text-white" type="button">
                <span>
                    首頁
                </span>
            </button>
        </a>
        <button class="btn m-2 bg-primary text-white" type="submit">
            <span>
                註冊
            </span>
        </button>
        </div>
    </form>
</div> 