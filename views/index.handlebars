{{!-- button --}}
<div class="btn-wrapper d-flex justify-content-center m-4">
    <form action="/account/selectDate" method="GET">
      <div class="date-input mt-4 d-none" id="dateInputField">
        <button class="btn btn-secondary mr-1" type="submit">選擇</button>
        <input type="date" id="dateInput" name="date">
      </div>
    </form>
    <div class="date ml-4 date-icon">
        <button type="button" onclick="showDateInput();" class="btn">
            <span class="h1 text-dark" style="text-shadow: -4px 5px 2px rgba(150, 150, 150, 1);">
                <i class="far fa-calendar-alt"></i>
            </span>
        </button>
    </div>
    <div class="today ml-4 mt-2">
        {{#if date}}
        <span class="h1 text-dark" id="showDateField">{{{date}}}</span>
        {{else}}
        <span class="h1 text-dark" id="showDateField">{{{today}}}</span>
        {{/if}}
    </div>
    <div class="new ml-3 new-icon">
        <a class="nav-link" href="/account/new"><span class="h1 text-dark" style="text-shadow: -4px 5px 2px rgba(150, 150, 150, 1);"><i class="fas fa-plus-circle"></i></span></a>
    </div>
</div>
{{!-- list --}}
<div class="container col-6 mt-4">
  <div class="list-group">
      {{#each paginationData}}
      <div class="list-group-item list-group-item-action active d-flex justify-content-between">
        <div class="text-monospace">
          <i class="far fa-calendar-alt"></i>{{{this.date}}}
        </div>
        <div class="text-monospace">
          <span class="badge badge-pill badge-dark font-weight-normal">
            ${{{this.price}}}
          </span>
        </div>
        <div class="text-monospace">
          {{{this.category}}}
        </div>
        <div class="text-monospace d-flex">
          <form action="/account/{{{this.id}}}/edit?_method=PUT" method="POST">
            <button class="btn text-dark modify" type="submit"><i class="fas fa-edit"></i>修改</button>
          </form>
          <!-- Button trigger modal -->
          <button type="button" class="btn delete" data-toggle="modal" data-target="#warning{{{this.id}}}">
            <span class="ml-1 text-dark"><i class="fas fa-trash"></i></span>
          </button>
        </div>
      </div>
      {{!-- alert message for delete --}}
          <div class="modal fade" id="warning{{{this.id}}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete?!</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  You sure delete {{{this.date}}} + {{{this.category}}}?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <form action="/account/{{{this.id}}}/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-primary">Delete!</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
      {{/each}}
  </div>
</div>
<form action="/" method="GET">
<nav aria-label="Page navigation" class="mt-2">
  <ul class="pagination justify-content-center" id="pagination">
    {{#each pages}}
      <li class="page-item">
        <button class="page-link" type="submit" name="page" value="{{{this}}}">{{{this}}}</button>
      </li>
    {{/each}}
  </ul>
</nav>
<div class="display-wrapper">
      <div class="sortbydate">
        <label for="sortDate" class="text-dark">日期排列(小到大)</label>
        <input type="radio" class="text-dark" id="sortDate" name="sortBy" value="date">
      </div>
      <div class="sortbyPrice">
        <label for="sortPrice" class="text-dark">金額排列(小到大)</label>
        <input type="radio" id="sortPrice" name="sortBy" value="price">
      </div>
  </div>
</form>
{{!-- chart --}}
<div class="container col-6 mt-4 text-center">
  <div class="selectDateTitle">
    <h1>期間選擇</h1>
  </div>
  <div class="selectDateOption">
    <ul class="nav nav-pills justify-content-center">
      <li class="nav-item" id="week-chart">
        <button class="btn m-2 bg-primary text-white" type="button">週</button class="btn m-2 bg-primary text-white" type="button">
      </li>
      <li class="nav-item" id="month-chart">
        <button class="btn m-2 bg-primary text-white" type="button">月</button class="btn m-2 bg-primary text-white" type="button">
      </li>
      <li class="nav-item" id="halfyear-chart">
        <button class="btn m-2 bg-primary text-white" type="button">半年</button class="btn m-2 bg-primary text-white" type="button">
      </li>
      <li class="nav-item" id="custom-chart">
        <button class="btn m-2 bg-primary text-white" type="button">自訂</button class="btn m-2 bg-primary text-white" type="button">
      </li>
    </ul>
  </div>
</div>
{{!-- chart display --}}
<div class="chart-wrapper d-flex">
  <div class="chart1 col-6">
    <canvas id="totalExpense" width="300" height="300"></canvas>
  </div>
  <div class="chart2 col-6">
    <canvas id="graduallyExpense" width="300" height="300"></canvas>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
